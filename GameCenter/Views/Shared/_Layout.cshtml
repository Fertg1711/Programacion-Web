<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Game Center</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding: 0;">

    <header class="header">
        <div class="logo">
            <img src="~/img/logo.png">
            <h1 class="titulo" style="text-decoration: none;">@Html.ActionLink("GAME CENTER", "Index", "Home")</h1>
        </div>
        <nav class="nav-links">
            @Html.ActionLink("Videojuegos", "videojuegos", "Home")
        </nav>
        <div>
            <input class="search" type="search" name="" id="" placeholder="Buscar">
            <button class="btn">@Html.ActionLink("perfil", "perfil", "Home")</button>
        </div>


    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
